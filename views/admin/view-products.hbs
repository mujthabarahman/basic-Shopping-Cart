<section>
    <div class="container">
        <div class="row mt-3">
            <a href="admin/add-product" style="width: 150px;" class="btn btn-success">Add Product</a>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product</th>
                        <th scope="col">Company</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">{{this.index}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.company}}</td>
                        <td>{{this.price}}$</td>
                        <td>{{this.description}}</td>
                        <td><img style="width: 70px; height: 70px;" src="/images/{{this._id}}.jpg" alt=""></td>
                        <td>
                            <a href="admin/delete-product/{{this._id}}" class="btn btn-danger">delete</a>
                            <a class="btn btn-warning">edit</a>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
<section id="All-Products">
    <div class="container-fluid" style="padding: 50px;">
        <div class="row">
        {{#each products}}
            <div class="card col-md-6 mt-3 mr-3" style="width: 20rem;">
                <img src="/images/{{this._id}}.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <h3>{{this.price}}$</h3>
                    <a href="#" class="btn btn-primary mt-3">Add to Cart</a>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
</section>